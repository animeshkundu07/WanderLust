    <div class="hero-overlay">
        <div class="hero-content">
            <h1 class="hero-title">Find Your Perfect Stay</h1>
            <p class="hero-subtitle">Discover amazing places to stay around the world</p>
            <a href="/listings" class="btn btn-hero">Explore Now</a>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container my-5">
    <div class="text-center mb-5">
        <h2 class="section-title">Why Choose WanderLust?</h2>
        <p class="section-subtitle">Your journey to unforgettable experiences starts here</p>
    </div>
    
    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fa-solid fa-globe"></i>
                </div>
                <h3>Global Destinations</h3>
                <p>Explore accommodations in stunning locations across the globe, from tropical paradises to mountain retreats.</p>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fa-solid fa-shield-halved"></i>
                </div>
