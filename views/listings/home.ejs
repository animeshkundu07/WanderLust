            <div class="col-md-3 col-sm-6">
                <div class="destination-card">
                    <img src="https://images.unsplash.com/photo-1502602898657-3e91760cbb34?w=500" alt="Paris">
                    <div class="destination-overlay">
                        <h4>Paris, France</h4>
                        <p>City of Love</p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 col-sm-6">
                <div class="destination-card">
                    <img src="https://images.unsplash.com/photo-1513581166391-887a96ddeafd?w=500" alt="Santorini">
                    <div class="destination-overlay">
                        <h4>Santorini, Greece</h4>
                        <p>Island Paradise</p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 col-sm-6">
                <div class="destination-card">
                    <img src="https://images.unsplash.com/photo-1506012787146-f92b2d7d6d96?w=500" alt="Bali">
                    <div class="destination-overlay">
                        <h4>Bali, Indonesia</h4>
                        <p>Tropical Heaven</p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 col-sm-6">
                <div class="destination-card">
                    <img src="https://images.unsplash.com/photo-1485738422979-f5c462d49f74?w=500" alt="Maldives">
                    <div class="destination-overlay">
                        <h4>Maldives</h4>
                        <p>Beach Bliss</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="container my-5 py-5">
    <div class="cta-card">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="cta-title">Ready to Start Your Adventure?</h2>
                <p class="cta-text">Join thousands of travelers who trust WanderLust for their perfect getaway.</p>
            </div>
            <div class="col-md-4 text-end">
                <a href="/listings/new" class="btn btn-cta">List Your Property</a>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="stats-section">
    <div class="container py-5">
        <div class="row text-center">
            <div class="col-md-3 col-6 mb-4">
                <div class="stat-item">
                    <i class="fa-solid fa-hotel stat-icon"></i>
                    <h3 class="stat-number">1000+</h3>
                    <p class="stat-label">Properties</p>
                </div>
            </div>
            
            <div class="col-md-3 col-6 mb-4">
                <div class="stat-item">
                    <i class="fa-solid fa-users stat-icon"></i>
                    <h3 class="stat-number">50K+</h3>
                    <p class="stat-label">Happy Guests</p>
                </div>
            </div>
            
            <div class="col-md-3 col-6 mb-4">
                <div class="stat-item">
                    <i class="fa-solid fa-earth-americas stat-icon"></i>
                    <h3 class="stat-number">100+</h3>
                    <p class="stat-label">Countries</p>
                </div>
            </div>
            
            <div class="col-md-3 col-6 mb-4">
                <div class="stat-item">
                    <i class="fa-solid fa-star stat-icon"></i>
                    <h3 class="stat-number">4.8</h3>
                    <p class="stat-label">Average Rating</p>
                </div>
            </div>
        </div>
    </div>
</div>

